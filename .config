# 基础架构
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

# 分区设置 (必须)
CONFIG_TARGET_ROOTFS_PARTSIZE=8192  # 8GB根分区
CONFIG_TARGET_OPTIMIZATION="-march=goldmont-plus -Os"

# 内核优化 (J4125专属)
CONFIG_CPU_FREQ_DEFAULT_GOV_ONDEMAND=y
CONFIG_INTEL_PSTATE=y
CONFIG_ZRAM=y

# 网络加速
CONFIG_PACKAGE_luci-app-turboacc=y
CONFIG_TURBOACC_INCLUDE_BBR_CCA=y
CONFIG_TURBOACC_INCLUDE_SHORTCUT_FE=n

# 核心插件列表
CONFIG_PACKAGE_luci-app-aria2=y
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-cpolar=y
CONFIG_PACKAGE_luci-app-zerotier=y
CONFIG_PACKAGE_luci-app-adguardhome=y
CONFIG_PACKAGE_luci-app-samba4=y
CONFIG_PACKAGE_luci-app-dockerman=y

# 安全加固
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_OPENSSL_PREFER_CHACHA_OVER_GCM=y
CONFIG_SSH_STRICT_KEX=y

# 依赖组件
CONFIG_PACKAGE_docker-compose=y
CONFIG_PACKAGE_btrfs-progs=y
CONFIG_PACKAGE_xfsprogs=y
